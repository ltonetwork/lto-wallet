/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "@legalthings-one/component-kit": ["libs/component-kit/src"],
      "@legalthings-one/platform": ["libs/platform/src"],
      "@explorer": ["apps/explorer/src/app"],
      "@explorer/*": ["apps/explorer/src/app/*"],
      "@wallet/*": ["apps/wallet/src/app/*"]
    }
  }
}

